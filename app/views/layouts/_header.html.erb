<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".title"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to  "#{current_request.request_details.size}", cart_path, class: "badge" %><li>
        <li><%= link_to t(".home"), root_path %></li>
        <li><%= link_to t(".book"), books_path %></li>
        <li><%= link_to t(".user"), users_path %></li>
        <li><%= link_to t(".author"), authors_path %></li>
        <li><%= link_to t(".publisher"), publishers_path %></li>
        <% if user_signed_in? %>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <%= current_user.name %>
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to t(".profile"), edit_user_registration_path %></li>
              <li><%= link_to t(".logout"), destroy_user_session_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".login"), new_user_session_path %></li>
          <li><%= link_to t(".signup"), new_user_registration_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
