<%= form_for @category do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>
  <%= f.label :parent_id %>
  <%= f.number_field :parent_id, class: "form-control", min: 0 %>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
