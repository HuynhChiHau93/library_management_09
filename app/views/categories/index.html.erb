<div class="users">
  <%= link_to t(".new"), new_category_path, class: "btn btn-primary" %>
  <%= form_tag categories_path, method: :get do %>
    <%= text_field_tag :query, params[:query] %>
    <%= submit_tag t(".search"), name: nil, class: "btn-primary" %>
  <% end %>
  <table class="table table-condensed">
    <thead>
      <tr>
        <th><%= t ".id" %></th>
        <th><%= t ".name" %></th>
        <th><%= t ".parent" %></th>
        <th><%= t ".action" %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @categories %>
    </tbody>
  </table>
</div>
